<div ng-app="todo">
  <h2>My Todo List</h2>
  <div ng-controller="TodoCtrl">
    <ul id="todo-list" class="unstyled">
      <li ng-repeat="item in items">
        <input type="checkbox" ng-model="item.done" ng-click="updateItem(item)">
        <span class="done-{{item.done}}">{{item.description}}</span>
      </li>
    </ul>
    <form id="new-item" class="horizontal">
      <input name="description" ng-model="description" ng-model-instant placeholder="new todo item description" type="text">
      <button class="btn" ng-click="addItem()"><i class="icon-plus"></i>&nbsp;Add</button>
    </form>
    <button class="btn" ng-click="clearDone()"><i class="icon-trash"></i>&nbsp;Clear Done</button>
  </div>
</div>
